<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/modify_pwd_root"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="15dp"
        android:id="@+id/modify_pwd_old"
        >
        <TextView
            android:id="@+id/pwd_old"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="原密码"
            android:textSize="16sp"
            />
        <ImageButton
            android:id="@+id/eye_btn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:minHeight="2dp"
            android:minWidth="2dp"
            android:background="@drawable/ic_input_invisible"

            />
        <EditText
            android:id="@+id/pwd_edit_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入原密码"
            android:textSize="14sp"
            android:layout_toRightOf="@id/pwd_old"
            android:layout_toLeftOf="@id/eye_btn_0"
            android:layout_marginRight="15dp"

            android:maxLines="1"


            android:background="@null"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/pwd_txt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新密码"
            android:textSize="16sp"
            />
        <ImageButton
            android:id="@+id/eye_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:minHeight="2dp"
            android:minWidth="2dp"
            android:background="@drawable/ic_input_invisible"

            />
        <EditText
            android:id="@+id/pwd_edit_new_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入8-16位字符，新密码"
            android:textSize="14sp"
            android:layout_toRightOf="@id/pwd_txt"
            android:layout_toLeftOf="@id/eye_btn"
            android:layout_marginRight="15dp"

            android:maxLines="1"


            android:background="@null"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/pwd_txt2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="再次输入"
            android:textSize="16sp"
            />
        <ImageButton
            android:id="@+id/eye_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:minHeight="2dp"
            android:minWidth="2dp"
            android:background="@drawable/ic_input_invisible"

            />
        <EditText
            android:id="@+id/pwd_edit_new_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请再次输入"
            android:textSize="14sp"
            android:layout_toRightOf="@id/pwd_txt2"
            android:layout_toLeftOf="@id/eye_btn2"
            android:layout_marginRight="15dp"

            android:maxLines="1"


            android:background="@null"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>


    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#a6a6a6"
        android:text="密码中必须同时包含字母和数字"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        /-->


</LinearLayout>
