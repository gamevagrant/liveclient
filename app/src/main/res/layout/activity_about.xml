            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服邮箱"
                android:textSize="14sp"
                android:textColor="@color/main_txt_color2"
                android:layout_centerVertical="true"
                />
            <TextView

