                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:textSize="12sp"
                android:text="live.service@meetvr.com.cn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <RelativeLayout
