<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.0"
        >
        <FrameLayout
            android:id="@+id/mb_f0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_sum_none"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/mb_name0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10摩币"
                    android:textSize="14sp"
                    android:textColor="@color/main_txt_color2"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/mb_num0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10元"
                    android:textSize="12sp"
                    android:textColor="@color/main_txt_color3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/mb_yh0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:textColor="#ffffff"
                android:text="+15%"
                android:textSize="9sp"

                />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.0"
        >
        <FrameLayout
            android:id="@+id/mb_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_sum_none"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/mb_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10摩币"
                    android:textSize="14sp"
                    android:textColor="@color/main_txt_color2"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/mb_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10元"
                    android:textSize="12sp"
                    android:textColor="@color/main_txt_color3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/mb_yh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:textColor="#ffffff"
                android:text="+15%"
                android:textSize="9sp"

                />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.0"
        >
        <FrameLayout
            android:id="@+id/mb_f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_sum_none"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/mb_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10摩币"
                    android:textSize="14sp"
                    android:textColor="@color/main_txt_color2"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/mb_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10元"
                    android:textSize="12sp"
                    android:textColor="@color/main_txt_color3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/mb_yh2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:textColor="#ffffff"
                android:text="+15%"
                android:textSize="9sp"

                />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>