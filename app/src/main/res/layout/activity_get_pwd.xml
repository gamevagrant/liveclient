<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
 >
<include layout="@layout/title"></include>

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/code_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textSize="16sp"
            />
        <ImageButton
            android:id="@+id/del_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:minHeight="2dp"
            android:minWidth="2dp"
            android:background="@drawable/del_btn_bg"

            />
        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入手机号"
            android:textSize="14sp"
            android:layout_toRightOf="@id/code_txt"
            android:layout_toLeftOf="@id/del_btn"
            android:layout_marginRight="15dp"

            android:maxLines="1"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ver_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="15dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/code_txt1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/get_vocder"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:minHeight="2dp"
            android:minWidth="2dp"
            android:background="@drawable/login_btn_bg"
            android:text="获取"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            />
        <EditText
            android:id="@+id/ver_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入验证码"
            android:textSize="14sp"
            android:layout_toRightOf="@id/code_txt1"
            android:layout_toLeftOf="@id/get_vocder"
            android:layout_marginRight="15dp"

            android:maxLines="1"
            android:background="@null"
            android:inputType="phone"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="34dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >


        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:minHeight="2dp"
            android:minWidth="2dp"
            android:background="@drawable/login_btn_bg"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="下一步"
            />

    </LinearLayout>

</LinearLayout>
