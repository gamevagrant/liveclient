<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accounts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg_color"
    tools:context="com.meetvr.liveshowclient.AccountsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <include layout="@layout/title"></include>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/main_layout_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:background="@android:color/white"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="账户余额:"
                            android:textSize="16sp"
                            android:textColor="#1a1a1a"
                            />
                        <TextView
                            android:id="@+id/mb_count_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="0"
                            android:textSize="22sp"
                            android:textColor="#ffc600"
                            android:layout_marginLeft="2dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="摩币"
                            android:textSize="16sp"
                            android:textColor="#1a1a1a"
                            android:layout_marginLeft="1dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_txt_color3"
                        android:textSize="12sp"
                        android:text="请选择充值金额"

                        />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/money_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="1dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@android:color/white"
                    ></LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@android:color/white"
                    ></RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_txt_color3"
                        android:textSize="12sp"
                        android:text="请选择充值方式"

                        />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/allipay_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    >

                    <ImageView
                        android:id="@+id/alipay_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_charge_zfb"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_txt_color2"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/alipay_img"
                        android:text="支付宝"
                        android:layout_marginLeft="10dp"

                        />
                    <ImageView
                        android:id="@+id/allipay_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_selected"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/weixinpay_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    >

                    <ImageView
                        android:id="@+id/wepay_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_charge_wx"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_txt_color2"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/wepay_img"
                        android:text="微信支付"
                        android:layout_marginLeft="10dp"

                        />
                    <ImageView
                        android:id="@+id/wechat_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_selected"
                        />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="34dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="30dp"
                    >


                    <Button
                        android:id="@+id/commit_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:minHeight="2dp"
                        android:minWidth="2dp"
                        android:background="@drawable/commit_btn_bg"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:text="充值"
                        />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
